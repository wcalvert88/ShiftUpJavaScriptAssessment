<%- include('../views/headers/header.ejs') %>
<h1><%= title %></h1>

<div class="col-xs-6 half-page">
  <form action="/"
        id="addStudentForm"
        method="post"
        name="form1">
    <div class="form-group">
      <label for="sname">Student Name:</label>
      <input class="form-control" id="sname"
           name="sname"
           placeholder="Full Name"
           type="text">
    </div>
    <div class="form-group">
      <label for="sAge">Student Age:</label>
      <input class="form-control" id="sAge"
           name="sAge"
           placeholder="Age"
           type="text">
    </div>
    <div class="form-group">
      <label for="cAbility">Current Ability: <small>(Must be greater than 20 to qualify)</small></label>
      <input class="form-control" id="cAbility"
           name="cAbility"
           placeholder="Enter # between 0-100"
           type="text">
    </div>
    <div class="form-group">
      <label for="cMoney">Current Money:</lab> <input class="form-control" id="cMoney"
           name="cMoney" placeholder="Monthly fee is $150"
           type="number">
    </div>
    <button id="applyStudent"
          type="submit"
          value="ApplyStudent">Apply</button>
  </form>
</div>
